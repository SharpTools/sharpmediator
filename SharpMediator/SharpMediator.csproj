<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>2.0.0</Version>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Description>A cool netstandard implementation of the Mediator Pattern using weak references.</Description>
    <Company>Andre Carlucci</Company>
    <PackageProjectUrl>https://github.com/SharpTools/sharpmediator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/SharpTools/sharpmediator.git</RepositoryUrl>
    <PackageTags>mediator, netstandard, events</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NETStandard.Library" Version="2.0.0" />
  </ItemGroup>

</Project>